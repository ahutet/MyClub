{% extends 'menu.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Nouvelle équipe{% endblock %}

{% block body_menu %}
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card_team">
                <div class="card-header">
                    <h3 class="text-white">Nouvelle équipe</h3>
                </div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        {{ form_widget(form.division, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="input-group form-group">
                        {{ form_row(form.season) }}
                    </div>
                    <div class="form-group">
                        <a href="{{ path( 'home_manager' ) }}"
                           class="btn float-left login_btn">Retour</a>
                        <button type="submit"
                                class="btn float-right login_btn">Enregistrer
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}